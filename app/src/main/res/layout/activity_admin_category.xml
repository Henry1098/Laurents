<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategory">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajout"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/dresses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/glasses"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/glasses" />

        <ImageView
            android:id="@+id/headphones"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/laptops"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/laptops" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/sweather"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sweather" />

        <ImageView
            android:id="@+id/bags"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:src="@drawable/hats" />

        <ImageView
            android:id="@+id/mobiles"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobiles" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/tshirt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tshirts"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="471dp" />

        <ImageView
            android:id="@+id/headphones_"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:src="@drawable/sports"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="471dp" />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:src="@drawable/watches" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>